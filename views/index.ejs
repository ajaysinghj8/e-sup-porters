<script type="text/javascript">
   
   function voteme(param) {
            var objmsg = document.getElementById("votes"+param);
              $.post("/vote/"+param,function (data) {
                   if(data.msg == 'no_session')
                        login();
                   else
                    alert(data); 
               });
   }
 


 </script>
